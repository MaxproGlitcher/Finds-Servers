-- Notification pour me contacter au cas probl√®me pour le Script Server Finder Deluxe
-- Impression de texte personnalis√© pour la console roblox
local Modules = {
    Colors =  {
        ["Grey"] = "254, 254, 254", -- color in rgb
        ["Cyan"] = "33, 161, 163"
    }
}

Modules.ChangeColor = function() 
    game:GetService("RunService").Heartbeat:Connect(function()
    	if game:GetService("CoreGui"):FindFirstChild("DevConsoleMaster") then 
	        for _, v in pairs(game:GetService("CoreGui"):FindFirstChild("DevConsoleMaster"):GetDescendants()) do 
	            if v:IsA("TextLabel") then 
	                v.RichText = true 
	            end 
	        end 
	    end
    end)
end

Modules.print = function(color, text, size)
	if not Modules.Colors[color] then 
		warn("Color was not found!")
		return 
	end 
	
	
    local Text = '<font color="rgb(' .. Modules.Colors[color] .. ')"'
    if size then
        Text = Text .. ' size="' .. tostring(size) .. '"'
    end
    Text = Text .. '>' .. tostring(text) .. '</font>'
    print(Text)
end


Modules.ChangeColor()
Modules.print("Grey","-------------------------------------------------------------------------------------",20)
Modules.print("Grey", "Script Server Finder Deluxe is executed !!! , Version 3.5",20)
Modules.print("Grey","-------------------------------------------------------------------------------------",20)
Modules.print("Grey", "Si vous rencontrez des probl√®mes avec mon script aller m'√©cricre en priv√© sur Discord: maxproglitcher",20)
Modules.print("Grey","-------------------------------------------------------------------------------------",20)
Modules.print("Grey", "If you have any problems with my script, please write to me privately on Discord: maxproglitcher",20)
Modules.print("Grey","-------------------------------------------------------------------------------------",20)

